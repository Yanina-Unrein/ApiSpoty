<h2 class="mb-4"><%= title %></h2>

<form method="POST" action="/admin/artists">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" name="name" required>
    </div>
    
    <div class="mb-3">
        <label class="form-label">URL de la Foto</label>
        <input type="url" class="form-control" name="photo" required>
    </div>
    
    <button type="submit" class="btn btn-primary">Crear Artista</button>
    <a href="/admin/artists" class="btn btn-secondary">Cancelar</a>
</form>