<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><%= title %></h2>
    <a href="/admin/artists/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Artista
    </a>
</div>

<% if (artists.length === 0) { %>
    <div class="alert alert-info">No hay artistas registrados</div>
<% } else { %>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Foto</th>
                    <th>Nombre</th>
                    <th>Canciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% artists.forEach(artist => { %>
                <tr>
                    <td><%= artist.id %></td>
                    <td>
                        <% if (artist.photo) { %>
                            <img src="<%= artist.photo %>" alt="Foto" style="height: 50px; width: 50px; object-fit: cover;">
                        <% } else { %>
                            <span class="text-muted">Sin foto</span>
                        <% } %>
                    </td>
                    <td><%= artist.name %></td>
                    <td><%= artist.songs.length %></td>
                    <td>
                        <a href="/admin/artists/edit/<%= artist.id %>" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form action="/admin/artists/delete/<%= artist.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" 
                                    onclick="return confirm('Â¿Eliminar este artista?')">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>