<%- include('../../partials/header', { title: 'Editar Categoria' }) %>
<%- include('../../partials/sidebar', { admin: admin }) %>

<div class="col-md-10 col-lg-10 main-content">
    <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success"><%= success_msg[0] %></div>
    <% } %>
    <% if (error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger"><%= error_msg[0] %></div>
    <% } %>
    <div class="pb-2 mb-3 border-bottom">
        <h1 class="title-w">Editar Categoria</h2>
    </div>
     <div class="card">
        <div class="card-body">
            <form method="POST" action="/admin/categories/update/<%= category.id %>">
                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input type="text" class="form-control" name="name" value="<%= category.name %>" required>
                </div>
                
                <button type="submit" class="btn btn-spotify">Actualizar Categor√≠a</button>
                <a href="/admin/categories" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>

<%- include('../../partials/footer') %>