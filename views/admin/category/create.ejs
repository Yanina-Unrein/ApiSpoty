<%- include('../../partials/header', { title: 'Crear Categoría' }) %>
<%- include('../../partials/sidebar', { admin: admin }) %>

<div class="col-md-10 col-lg-10 main-content">
  <% if (success_msg) { %>
    <div class="alert alert-success"><%= success_msg %></div>
  <% } %>
  <% if (error_msg) { %>
    <div class="alert alert-danger"><%= error_msg %></div>
  <% } %>
  <div class="pb-2 mb-3 border-bottom">
    <h1 class="title-w">Crear Nueva Categoría</h1>
  </div>
  <div class="card">
    <div class="card-body">
      <form method="POST" action="/admin/categories/create">
        <div class="mb-3">
          <label class="form-label">Nombre</label>
          <input type="text" class="form-control" name="name" required>
        </div>

        <button type="submit" class="btn btn-spotify">Crear Categoría</button>
        <a href="/admin/categories" class="btn btn-secondary">Cancelar</a>
      </form>
    </div>
  </div>
</div>

<%- include('../../partials/footer') %>
