<%- include('../partials/header', { title: 'Editar Canción' }) %>

<h1>Editar Canción</h1>

<% if (error_msg) { %>
  <div class="alert alert-danger"><%= error_msg %></div>
<% } %>

<form action="/admin/songs/update/<%= songId %>" method="POST">
  <div class="mb-3">
    <label class="form-label">Título</label>
    <input type="text" name="title" class="form-control" required>
  </div>
  
  <div class="mb-3">
    <label class="form-label">Artista</label>
    <input type="text" name="artist" class="form-control">
  </div>
  
  <div class="mb-3">
    <label class="form-label">Duración (mm:ss)</label>
    <input type="text" name="duration" class="form-control" placeholder="3:45" required>
  </div>
  
  <button type="submit" class="btn btn-primary">Actualizar Canción</button>
  <a href="/admin/songs" class="btn btn-secondary">Cancelar</a>
</form>

<%- include('../partials/footer') %>